full-size = @block {
  width: 100%
  height: 100%}
no-padding = '#about-conf .container, #contacts .container, #contacts .person .img-block, #contacts .person, #contacts .map, #contacts .address, #conditions .container, #conditions .price_table, #conditions .price_table .note, #conditions .attention, #conditions .requisites, #conditions .requisites div'
inline-display = ''
{no-padding}
    padding-left 0
    padding-right 0
{inline-display}
    display inline-block
    
/*MIXINS*/
border-radius(n)    
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n
transition(n x)
    -moz-transition n x
    -webkit-transition n x
    transition n x
/*--MIXINS--*/
body, html
    background #f5f5f5 url(../images/speakers/body-bg.png) repeat
    font-family 'Open Sans Condensed',sans-serif
h2, h3, h4, h1
    text-align center
    text-transform uppercase
    color #000
    font-family 'Open Sans Condensed',sans-serif
    
#about-conf
    h2
        font-size 32px
        text-align left
        padding 0 15px
    h3
        font-size 28px
    .item-group
        margin 1% 0
        .col-lg-12
            padding-right  0
        h3
            text-transform none
            margin-bottom 25px
            cursor default
            font-size 26px
        .item
            height 515px
            text-align center
            .img-block
                margin-bottom 10px
                border 1px solid #ddd
                img
                    {full-size}
            .txt-block
                color #000
                cursor default
                background: transparent
                height 165px
                padding 10px 0
                .sname
                    text-transform uppercase
                    font-size 28px
                    margin 0
                .fname, .proff, .from
                    font-size 18px
                hr
                    margin 3px 0
                    width 100%
                    border 0
                    height 2px
                    background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -moz-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -ms-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -o-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
    .location
        p   
            font-size 20px
        .img-block
            img 
                {full-size}
        .upper
            text-transform uppercase
            font-weight 600
            text-align right
            display inline-block
            a   
                vertical-align super
        .right
            float right
.features
    .feature-wrap
        display inline-block
        text-align center
        padding 10px 0
        &:hover, &:focus, &:active 
            box-shadow 0 0 8px rgba(1, 105, 1,.6)
            cursor pointer

        h2
            font-weight normal
        img             
            border-radius 100px
        p   
            font-size 16px
    .all-speakers
        text-align center
        a   
            background #228B22
            color #fff
            padding 10px 20px 
            font-size 20px
            &:hover, &:focus, &:active
                background lighten(#004a00, 10%)
#contact-info
    background transparent
    text-align center
    padding 20px 0
    .contact-info
        i
            width auto
            height auto
            background transparent
            line-height normal
            font-size 28px
    .media
        h2
            color #000
            font-size 36px
            margin-bottom 20px
        p   
            font-size 30px
            margin-bottom 20px
            span   
                font-size 34px
                color #004a00
                font-weight 800
        .registr
            background #228B22
            color #fff
            padding 10px 20px 
            font-size 20px
            &:hover, &:focus, &:active
                background lighten(#004a00, 10%)
#recent-works
    .center
        padding-bottom 20px
    .photo
        padding 0
        .recent-work-wrap
            .overlay
                background #228B22
                .recent-work-inner
                    margin-top 25%
                    a
                        font-size 26px
                        margin-left 25%
#partner
    padding 20px 0
    background #fff
    hr
        margin 10px 0
        width 100%
        border 0
        height 2px
        background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -moz-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -ms-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -o-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
    .container
        margin-top 25px
    .center
        padding-bottom 10px
        h2
            color #000
#main-slider
	.carousel-content
		background rgba(0,0,0,.5)
		padding 20px
		border-radius 30px
		h2, h1
			text-align justify
			color #fff
			font-family 'Open Sans Condensed',sans-serif
		.btn-slide
			background #228B22
#contacts
    padding 10px 0
    hr
        margin 0
        margin-bottom 15px
        width 100%
        border 0
        height 2px
        background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -moz-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -ms-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -o-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
    h2
        font-size 32px
        text-align left
    h3
        font-size 22px
        margin-bottom 0
        font-weight bold
    .person
        .img-block
            img 
                width 100%
        .txt-block
            h2
                text-align left
                text-transform none
                font-size 26px
                color #4e4e4e
                margin-top 0
            p
                font-size 18px
    .address
        h3
            text-align left
            font-weight bold
        p   
            font-size 20px
    .map, .address
        h3
            margin-bottom 10px
#conditions
    padding 10px 0
    h2
        font-size 32px
        text-align left
    .price_table 
        color: #444444;
        font-size:100%;
        margin: 10px auto;
        width: 100%;
        display: block;
        .align_center
            text-align: center;
        .description
            width: 100%;
            p
                padding: 10px;
                border-bottom: 1px solid #c4c4c4;
                margin: 0;
                font-size 18px
        .pack-title
            font-size: 24px;
            color: #fff;
            text-shadow: 0 1px 0 rgba(125, 207, 61, 0.4);
            width: 100%;
            background: #004a00;
            padding: 15px 0;
        .column_1
            height: 100%;
            float: left;
            width: 20%;
            -webkit-transform: translate(0px, 0px);
            -moz-transform: translate(0px, 0px);
            -o-transform: translate(0px, 0px);
            -ms-transform: translate(0px, 0px);
            transform: translate(0px, 0px);
            background: #fff;
            border: 1px solid #000;
            &.hover
                position: relative;
                z-index: 100;
                box-shadow: 0px 0px 20px 5px rgba(0,0,0,0.7)
                -webkit-box-shadow: 0px 0px 20px 5px rgba(0,0,0,0.7)
                -moz-box-shadow: 0px 0px 20px 5px rgba(0,0,0,0.7)
                -webkit-transform: translate(0px, 0px);
                -moz-transform:translate(0px, 0px);
                -o-transform: translate(0px, 0px);
                -ms-transform:translate(0px, 0px);
                transform: translate(0px, 0px);
                .pack-title 
                     color: #e3c55e;
        .members
            width: 59%;
            height: 100%;
        .note
            p  
                font-size 18px
                margin 10px 0
    .attention
        h3
            text-align left
            font-size 26px
            color #9b0000
            font-weight bold
        p
            font-size 18px
    .requisites
        hr
            margin 0
            margin-bottom 15px
            width 100%
            border 0
            height 2px
            background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
            background-image -moz-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
            background-image -ms-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
            background-image -o-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        h2
            text-align center
            font-size 28px
        h3
            text-align left
            font-size 24px
            text-transform none
        p
            font-size 20px
#articles
	padding 10px 0
	h2
		font-size 32px
		text-align left
	hr
		margin 0
		margin-bottom 15px
		width 100%
		border 0
		height 2px
		background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
		background-image -moz-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
		background-image -ms-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
		background-image -o-linear-gradient(left, rgba(1, 105, 1,0.5), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
	h3
		text-align left
		font-size 26px
	.general, .requirements, .commission
		padding 15px 0
		p	
			font-size 20px
			margin 15px 0
			line-height 28px
	.general
		img	
			float right
			margin 0 10px
			box-shadow 10px 10px 15px 3px rgba(0,0,0,.5)
		a
			color rgba(1, 105, 1, .8)
			text-decoration underline
			&:hover
				color #000
	.requirements, .commission
		i
			display inline-block
		a
			display block
			margin .4em
			padding 1em
			cursor pointer
			background #e1e1e1
			text-decoration none
			color #666
			-webkit-tap-highlight-color rgba(0,0,0,0)
			text-align center
			&:hover
				color #fff
			p
				display inline-block
				margin-right 10px
				font-size 24px
			i
				font-size 28px
            
    