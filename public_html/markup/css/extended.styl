full-size = @block {
  width: 100%
  height: 100%}
no-padding = ''
inline-display = ''
{no-padding}
    padding-left 0
    padding-right 0
{inline-display}
    display inline-block
    
/*MIXINS*/
border-radius(n)    
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n
transition(n x)
    -moz-transition n x
    -webkit-transition n x
    transition n x
/*--MIXINS--*/
body, html
    background #f5f5f5 url(../images/speakers/body-bg.png) repeat
    font-family 'Open Sans Condensed',sans-serif
h2, h3
    text-align center
    text-transform uppercase
    color #004a00
    font-family 'Open Sans Condensed',sans-serif
    
#about-conf
    h2
        font-size 32px
    h3
        font-size 28px
    .item-group
        margin 1% 0
        .col-lg-12
            padding-right  0
        h3
            text-transform none
            margin-bottom 25px
            cursor default
            font-size 26px
        .item
            height 515px
            text-align center
            .img-block
                margin-bottom 10px
                border 1px solid #ddd
                img
                    {full-size}
            .txt-block
                color #004a00
                cursor default
                background: transparent
                height 165px
                padding 10px 0
                .sname
                    text-transform uppercase
                    font-size 28px
                    margin 0
                .fname, .proff, .from
                    font-size 18px
                hr
                    margin 3px 0
                    width 100%
                    border 0
                    height 2px
                    background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -moz-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -ms-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
                    background-image -o-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
    .location
        p   
            font-size 20px
        .img-block
            img 
                {full-size}
        .upper
            text-transform uppercase
            font-weight 600
            text-align right
            display inline-block
            a   
                vertical-align super
        .right
            float right
.features
    .feature-wrap
        display inline-block
        text-align center
        padding 10px 0
        &:hover, &:focus, &:active 
            box-shadow 0 0 8px rgba(1, 105, 1,.6)
            cursor pointer

        h2
            font-weight normal
        img             
            border-radius 100px
        p   
            font-size 16px
    .all-speakers
        text-align center
        a   
            background #004a00
            color #fff
            padding 10px 20px 
            font-size 20px
            &:hover, &:focus, &:active
                background lighten(#004a00, 10%)
#contact-info
    background transparent
    text-align center
    padding 20px 0
    .contact-info
        i
            width auto
            height auto
            background transparent
            line-height normal
            font-size 28px
    .media
        h2
            color #004a00
            font-size 36px
            margin-bottom 20px
        p   
            font-size 30px
            margin-bottom 20px
            span   
                font-size 34px
                color #004a00
                font-weight 800
        .registr
            background #004a00
            color #fff
            padding 10px 20px 
            font-size 20px
            &:hover, &:focus, &:active
                background lighten(#004a00, 10%)
#recent-works
    .center
        padding-bottom 20px
    .photo
        padding 0
        .recent-work-wrap
            .overlay
                background #004a00
                .recent-work-inner
                    margin-top 25%
                    a
                        font-size 26px
                        margin-left 25%
#partner
    padding 20px 0
    background #fff
    hr
        margin 10px 0
        width 100%
        border 0
        height 2px
        background-image -webkit-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -moz-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -ms-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
        background-image -o-linear-gradient(left, rgba(1, 105, 1,0), rgba(1, 105, 1,0.5), rgba(1, 105, 1,0))
    .container
        margin-top 25px
    .center
        padding-bottom 10px
        h2
            color #004a00
#main-slider
        .carousel-content
            background rgba(0,0,0,.5)
            padding 20px
            border-radius 30px
            h2, h1
                text-align justify
                font-family 'Open Sans Condensed',sans-serif
            .btn-slide
                background #004a00
    